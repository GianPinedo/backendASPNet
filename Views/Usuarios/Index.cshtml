@model IEnumerable<WebApplication2.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom_Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pass_Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado_Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom_Usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pass_Usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado_Usuario)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Usuario">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id_Usuario">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_Usuario">Delete</a>
                <a asp-action="EnqueueEmail" asp-route-id="@item.Id_Usuario">Email</a>
            </td>
        </tr>
}
    </tbody>
</table>
